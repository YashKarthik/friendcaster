{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",

    "strict": true,
    "outDir": "dist",
    "watch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node"
  }
}
